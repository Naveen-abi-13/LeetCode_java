import java.util.InputMismatchException;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int n = getValidNumber(sc, "Enter array size (for NxN array): ", 1, Integer.MAX_VALUE);
        int[][] arr = generateGrid(n);

        System.out.println("\nGenerated 2D array:");
        printGrid(arr, -1);

        int target = getValidNumber(sc, "Enter a number to highlight (even number 2â€“20): ", 2, 20);
        System.out.println();

        printGrid(arr, target);
        int count = countOccurrences(arr, target);

        System.out.println("Number " + target + " appeared " + count + " time(s)");
    }

    private static int getValidNumber(Scanner sc, String message, int min, int max) {
        while (true) {
            try {
                System.out.print(message);
                int num = sc.nextInt();
                if (num < min || num > max) {
                    System.out.println("Invalid input. Enter between " + min + " and " + max + ".");
                    continue;
                }
                return num;
            } catch (InputMismatchException e) {
                System.out.println("Invalid input. Enter a valid number.");
                sc.next();
            }
        }
    }

    private static int[][] generateGrid(int n) {
        int[][] arr = new int[n][n];
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                int num = (int) (Math.random() * 19) + 2;
                arr[i][j] = (num % 2 == 0) ? num : num + 1;
            }
        }
        return arr;
    }

    private static void printGrid(int[][] arr, int highlight) {
        int n = arr.length;
        printHeader(n);
        for (int i = 0; i < n; i++) {
            printRow(arr[i], i, highlight);
            printSeparator(n);
        }
    }

    private static void printHeader(int n) {
        System.out.print("    ");
        for (int j = 0; j < n; j++) {
            System.out.printf("  %02d ", j);
        }
        System.out.println();
        printSeparator(n);
    }

    private static void printRow(int[] row, int rowIndex, int highlight) {
        System.out.printf("%02d  ", rowIndex);
        for (int value : row) {
            if (value == highlight) System.out.printf("|[%02d]", value);
            else System.out.printf("| %02d ", value);
        }
        System.out.println("|");
    }

    private static void printSeparator(int n) {
        System.out.print("    ");
        for (int i = 0; i < n; i++) System.out.print("+----");
        System.out.println("+");
    }

    private static int countOccurrences(int[][] arr, int num) {
        int count = 0;
        for (int[] row : arr) {
            for (int val : row) {
                if (val == num) count++;
            }
        }
        return count;
    }
}
